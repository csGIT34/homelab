  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "repeat": "node",
      "repeatDirection": "h",
      "title": "$node",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Physical block devices detected by node-exporter with model and serial info",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "filterable": false,
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Size" },
            "properties": [
              { "id": "unit", "value": "decbytes" },
              { "id": "custom.width", "value": 120 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Device" },
            "properties": [
              { "id": "custom.width", "value": 80 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Model" },
            "properties": [
              { "id": "custom.width", "value": 280 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Serial" },
            "properties": [
              { "id": "custom.width", "value": 200 }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
      "id": 1,
      "options": {
        "cellHeight": "sm",
        "footer": { "countRows": false, "fields": "", "reducer": ["sum"], "show": false },
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Size" }]
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "node_block_device_size_bytes{instance=\"$node\", device!~\"dm-.*|loop.*\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "node_disk_info{instance=\"$node\", device!~\"dm-.*|loop.*\"}",
          "format": "table",
          "instant": true,
          "refId": "B"
        }
      ],
      "title": "Physical Drives",
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "filterByValue",
          "options": {
            "filters": [
              {
                "config": {
                  "id": "greater",
                  "options": { "value": 0 }
                },
                "fieldName": "Value #A"
              }
            ],
            "match": "any",
            "type": "include"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true,
              "instance": true,
              "Value #B": true,
              "major": true,
              "minor": true,
              "path": true,
              "revision": true,
              "wwn": true
            },
            "indexByName": {
              "device": 0,
              "model": 1,
              "serial": 2,
              "Value #A": 3
            },
            "renameByName": {
              "Value #A": "Size",
              "device": "Device",
              "model": "Model",
              "serial": "Serial"
            }
          }
        }
      ],
      "type": "table"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Proxmox storage pool usage percentage",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "#EAB839", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 1 },
      "id": 2,
      "options": {
        "displayMode": "lcd",
        "minVizHeight": 16,
        "minVizWidth": 8,
        "namePlacement": "auto",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showUnfilled": true,
        "sizing": "auto",
        "valueMode": "color"
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "(pve_disk_usage_bytes{id=~\"storage/$node/.*\"} / pve_disk_size_bytes{id=~\"storage/$node/.*\"}) * 100",
          "format": "time_series",
          "instant": true,
          "legendFormat": "{{ id }}",
          "refId": "A"
        }
      ],
      "title": "Storage Pool Usage %",
      "transformations": [
        {
          "id": "renameByRegex",
          "options": {
            "regex": "storage/[^/]+/(.*)",
            "renamePattern": "$1"
          }
        }
      ],
      "type": "bargauge"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Used and free space per Proxmox storage pool",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "fillOpacity": 80,
            "gradientMode": "none",
            "hideFrom": { "legend": false, "tooltip": false, "viz": false },
            "lineWidth": 1,
            "scaleDistribution": { "type": "linear" },
            "thresholdsStyle": { "mode": "off" }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          },
          "unit": "decbytes"
        },
        "overrides": [
          {
            "matcher": { "id": "byRegexp", "options": "/Free/" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "light-green", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byRegexp", "options": "/Used/" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "semi-dark-red", "mode": "fixed" } }
            ]
          }
        ]
      },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 9 },
      "id": 3,
      "options": {
        "barRadius": 0.05,
        "barWidth": 0.7,
        "fullHighlight": false,
        "groupWidth": 0.7,
        "legend": {
          "calcs": [],
          "displayMode": "list",
          "placement": "right"
        },
        "orientation": "horizontal",
        "showValue": "auto",
        "stacking": "normal",
        "tooltip": { "mode": "multi", "sort": "none" },
        "xTickLabelRotation": 0
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "pve_disk_usage_bytes{id=~\"storage/$node/.*\"}",
          "format": "time_series",
          "instant": true,
          "legendFormat": "{{ id }} Used",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "pve_disk_size_bytes{id=~\"storage/$node/.*\"} - pve_disk_usage_bytes{id=~\"storage/$node/.*\"}",
          "format": "time_series",
          "instant": true,
          "legendFormat": "{{ id }} Free",
          "refId": "B"
        }
      ],
      "title": "Storage Pool Capacity (Used + Free)",
      "transformations": [
        {
          "id": "renameByRegex",
          "options": {
            "regex": "storage/[^/]+/(.*)",
            "renamePattern": "$1"
          }
        }
      ],
      "type": "barchart"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Filesystem mount usage from node-exporter (ext4 and xfs)",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "filterable": false,
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Size" },
            "properties": [
              { "id": "unit", "value": "decbytes" },
              { "id": "custom.width", "value": 110 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Used" },
            "properties": [
              { "id": "unit", "value": "decbytes" },
              { "id": "custom.width", "value": 110 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Available" },
            "properties": [
              { "id": "unit", "value": "decbytes" },
              { "id": "custom.width", "value": 110 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Usage %" },
            "properties": [
              { "id": "unit", "value": "percent" },
              { "id": "custom.width", "value": 100 },
              { "id": "thresholds", "value": {
                "mode": "absolute",
                "steps": [
                  { "color": "green", "value": null },
                  { "color": "#EAB839", "value": 70 },
                  { "color": "red", "value": 85 }
                ]
              }},
              { "id": "custom.cellOptions", "value": {
                "mode": "lcd",
                "type": "gauge"
              }}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Mountpoint" },
            "properties": [
              { "id": "custom.width", "value": 200 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Filesystem" },
            "properties": [
              { "id": "custom.width", "value": 80 }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 19 },
      "id": 4,
      "options": {
        "cellHeight": "sm",
        "footer": { "countRows": false, "fields": "", "reducer": ["sum"], "show": false },
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Size" }]
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "node_filesystem_size_bytes{instance=\"$node\", fstype=~\"ext4|xfs\"}",
          "format": "table",
          "instant": true,
          "refId": "size"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "node_filesystem_avail_bytes{instance=\"$node\", fstype=~\"ext4|xfs\"}",
          "format": "table",
          "instant": true,
          "refId": "avail"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "node_filesystem_size_bytes{instance=\"$node\", fstype=~\"ext4|xfs\"} - node_filesystem_avail_bytes{instance=\"$node\", fstype=~\"ext4|xfs\"}",
          "format": "table",
          "instant": true,
          "refId": "used"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "100 - ((node_filesystem_avail_bytes{instance=\"$node\", fstype=~\"ext4|xfs\"} / node_filesystem_size_bytes{instance=\"$node\", fstype=~\"ext4|xfs\"}) * 100)",
          "format": "table",
          "instant": true,
          "refId": "pct"
        }
      ],
      "title": "Filesystem Usage",
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true,
              "instance": true,
              "device": true
            },
            "indexByName": {
              "mountpoint": 0,
              "fstype": 1,
              "Value #size": 2,
              "Value #used": 3,
              "Value #avail": 4,
              "Value #pct": 5
            },
            "renameByName": {
              "Value #size": "Size",
              "Value #avail": "Available",
              "Value #used": "Used",
              "Value #pct": "Usage %",
              "mountpoint": "Mountpoint",
              "fstype": "Filesystem"
            }
          }
        }
      ],
      "type": "table"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Virtual machine disk allocation and actual usage on this node",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "filterable": false,
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Allocated" },
            "properties": [
              { "id": "unit", "value": "decbytes" },
              { "id": "custom.width", "value": 120 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Used" },
            "properties": [
              { "id": "unit", "value": "decbytes" },
              { "id": "custom.width", "value": 120 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "VM Name" },
