{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "repeat": "node",
      "repeatDirection": "h",
      "title": "$node",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Physical block devices on this host (from node-exporter)",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "filterable": false,
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Size" },
            "properties": [
              { "id": "unit", "value": "decbytes" },
              { "id": "custom.width", "value": 120 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Device" },
            "properties": [
              { "id": "custom.width", "value": 80 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Model" },
            "properties": [
              { "id": "custom.width", "value": 280 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Serial" },
            "properties": [
              { "id": "custom.width", "value": 200 }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
      "id": 1,
      "options": {
        "cellHeight": "sm",
        "footer": { "countRows": false, "fields": "", "reducer": ["sum"], "show": false },
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Size" }]
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "node_block_device_size_bytes{instance=\"$node\", device!~\"dm-.*|loop.*\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "node_disk_info{instance=\"$node\", device!~\"dm-.*|loop.*\"}",
          "format": "table",
          "instant": true,
          "refId": "B"
        }
      ],
      "title": "Physical Drives",
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "filterByValue",
          "options": {
            "filters": [
              {
                "config": {
                  "id": "greater",
                  "options": { "value": 0 }
                },
                "fieldName": "Value #A"
              }
            ],
            "match": "any",
            "type": "include"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true,
              "instance": true,
              "Value #B": true,
              "major": true,
              "minor": true,
              "path": true,
              "revision": true,
              "wwn": true
            },
            "indexByName": {
              "device": 0,
              "model": 1,
              "serial": 2,
              "Value #A": 3
            },
            "renameByName": {
              "Value #A": "Size",
              "device": "Device",
              "model": "Model",
              "serial": "Serial"
            }
          }
        }
      ],
      "type": "table"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Proxmox storage pools on this node. Type: dir = directory on boot disk, lvm = dedicated disk, lvmthin = thin-provisioned on boot disk. Content: images = VM disks, backup/iso = templates and backups.",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "filterable": false,
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Total" },
            "properties": [
              { "id": "unit", "value": "decbytes" },
              { "id": "custom.width", "value": 100 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Used" },
            "properties": [
              { "id": "unit", "value": "decbytes" },
              { "id": "custom.width", "value": 100 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Free" },
            "properties": [
              { "id": "unit", "value": "decbytes" },
              { "id": "custom.width", "value": 100 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Usage %" },
            "properties": [
              { "id": "unit", "value": "percent" },
              { "id": "custom.width", "value": 120 },
              { "id": "thresholds", "value": {
                "mode": "absolute",
                "steps": [
                  { "color": "green", "value": null },
                  { "color": "#EAB839", "value": 70 },
                  { "color": "red", "value": 85 }
                ]
              }},
              { "id": "custom.cellOptions", "value": {
                "mode": "lcd",
                "type": "gauge"
              }}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Pool" },
            "properties": [
              { "id": "custom.width", "value": 100 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Type" },
            "properties": [
              { "id": "custom.width", "value": 80 },
              { "id": "mappings", "value": [
                { "options": { "dir": { "text": "Directory" } }, "type": "value" },
                { "options": { "lvm": { "text": "LVM" } }, "type": "value" },
                { "options": { "lvmthin": { "text": "LVM Thin" } }, "type": "value" }
              ]}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Content" },
            "properties": [
              { "id": "custom.width", "value": 130 },
              { "id": "mappings", "value": [
                { "options": { "images,rootdir": { "text": "VM Disks" } }, "type": "value" },
                { "options": { "backup,import,iso,vztmpl": { "text": "ISOs / Backups" } }, "type": "value" },
                { "options": { "backup,iso,snippets": { "text": "ISOs / Backups" } }, "type": "value" }
              ]}
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 1 },
      "id": 2,
      "options": {
        "cellHeight": "sm",
        "footer": { "countRows": false, "fields": "", "reducer": ["sum"], "show": false },
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Total" }]
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "pve_disk_size_bytes{id=~\"storage/$node/.*\"} * on(id) group_left(storage, plugintype, content) pve_storage_info",
          "format": "table",
          "instant": true,
          "refId": "total"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "pve_disk_usage_bytes{id=~\"storage/$node/.*\"}",
          "format": "table",
          "instant": true,
          "refId": "used"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "pve_disk_size_bytes{id=~\"storage/$node/.*\"} - pve_disk_usage_bytes{id=~\"storage/$node/.*\"}",
          "format": "table",
          "instant": true,
          "refId": "free"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "(pve_disk_usage_bytes{id=~\"storage/$node/.*\"} / pve_disk_size_bytes{id=~\"storage/$node/.*\"}) * 100",
          "format": "table",
          "instant": true,
          "refId": "pct"
        }
      ],
      "title": "Storage Pools",
      "transformations": [
        {
          "id": "joinByField",
          "options": {
            "byField": "id",
            "mode": "outer"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Time 1": true,
              "Time 2": true,
              "Time 3": true,
              "Time 4": true,
              "__name__": true,
              "__name__ 1": true,
              "__name__ 2": true,
              "__name__ 3": true,
              "__name__ 4": true,
              "job": true,
              "job 1": true,
              "job 2": true,
              "job 3": true,
              "job 4": true,
              "instance": true,
              "instance 1": true,
              "instance 2": true,
              "instance 3": true,
              "instance 4": true,
              "id": true,
              "node": true
            },
            "indexByName": {
              "storage": 0,
              "plugintype": 1,
              "content": 2,
              "Value #total": 3,
              "Value #used": 4,
              "Value #free": 5,
              "Value #pct": 6
            },
            "renameByName": {
              "storage": "Pool",
              "plugintype": "Type",
              "content": "Content",
              "Value #total": "Total",
              "Value #used": "Used",
              "Value #free": "Free",
              "Value #pct": "Usage %"
            }
          }
        }
      ],
      "type": "table"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Visual breakdown of used vs free space per storage pool",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "fillOpacity": 80,
            "gradientMode": "none",
            "hideFrom": { "legend": false, "tooltip": false, "viz": false },
            "lineWidth": 1,
            "scaleDistribution": { "type": "linear" },
            "thresholdsStyle": { "mode": "off" }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          },
          "unit": "decbytes"
        },
        "overrides": [
          {
            "matcher": { "id": "byRegexp", "options": "/Free/" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "light-green", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byRegexp", "options": "/Used/" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "semi-dark-red", "mode": "fixed" } }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 9 },
      "id": 3,
      "options": {
        "barRadius": 0.05,
        "barWidth": 0.7,
        "fullHighlight": false,
        "groupWidth": 0.7,
        "legend": {
          "calcs": [],
          "displayMode": "list",
          "placement": "right"
        },
        "orientation": "horizontal",
        "showValue": "auto",
        "stacking": "normal",
        "tooltip": { "mode": "multi", "sort": "none" },
        "xTickLabelRotation": 0
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "pve_disk_usage_bytes{id=~\"storage/$node/.*\"} * on(id) group_left(storage) pve_storage_info",
          "format": "time_series",
          "instant": true,
          "legendFormat": "{{ storage }} — Used",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "(pve_disk_size_bytes{id=~\"storage/$node/.*\"} - pve_disk_usage_bytes{id=~\"storage/$node/.*\"}) * on(id) group_left(storage) pve_storage_info",
          "format": "time_series",
          "instant": true,
          "legendFormat": "{{ storage }} — Free",
          "refId": "B"
        }
      ],
      "title": "Storage Pool Capacity (Used + Free)",
      "transformations": [],
      "type": "barchart"
    },
