          {
            "matcher": { "id": "byName", "options": "VM ID" },
            "properties": [
              { "id": "custom.width", "value": 80 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Status" },
            "properties": [
              { "id": "custom.width", "value": 80 },
              { "id": "mappings", "value": [
                { "options": { "1": { "text": "Running", "color": "green" } }, "type": "value" },
                { "options": { "0": { "text": "Stopped", "color": "red" } }, "type": "value" }
              ]},
              { "id": "custom.cellOptions", "value": {
                "type": "color-text"
              }}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Usage %" },
            "properties": [
              { "id": "unit", "value": "percent" },
              { "id": "custom.width", "value": 100 },
              { "id": "thresholds", "value": {
                "mode": "absolute",
                "steps": [
                  { "color": "green", "value": null },
                  { "color": "#EAB839", "value": 70 },
                  { "color": "red", "value": 85 }
                ]
              }},
              { "id": "custom.cellOptions", "value": {
                "mode": "lcd",
                "type": "gauge"
              }}
            ]
          }
        ]
      },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 27 },
      "id": 5,
      "options": {
        "cellHeight": "sm",
        "footer": {
          "countRows": false,
          "fields": "Allocated,Used",
          "reducer": ["sum"],
          "show": true
        },
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Allocated" }]
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "pve_disk_size_bytes{id=~\"qemu/.*\"} * on(id) group_left(name) (pve_guest_info{node=\"$node\"} > 0)",
          "format": "table",
          "instant": true,
          "refId": "alloc"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "pve_disk_usage_bytes{id=~\"qemu/.*\"} * on(id) group_left() (pve_guest_info{node=\"$node\"} > 0)",
          "format": "table",
          "instant": true,
          "refId": "used"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "(pve_disk_usage_bytes{id=~\"qemu/.*\"} / pve_disk_size_bytes{id=~\"qemu/.*\"}) * 100 * on(id) group_left() (pve_guest_info{node=\"$node\"} > 0)",
          "format": "table",
          "instant": true,
          "refId": "pct"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "pve_up{id=~\"qemu/.*\"} * on(id) group_left() (pve_guest_info{node=\"$node\"} > 0)",
          "format": "table",
          "instant": true,
          "refId": "status"
        }
      ],
