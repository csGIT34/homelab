              "job": true,
              "instance": true,
              "node": true
            },
            "indexByName": {
              "name": 0,
              "id": 1,
              "Value #alloc": 2,
              "Value #used": 3,
              "Value #pct": 4,
              "Value #status": 5
            },
            "renameByName": {
              "Value #alloc": "Allocated",
              "Value #used": "Used",
              "Value #pct": "Usage %",
              "Value #status": "Status",
              "name": "VM Name",
              "id": "VM ID"
            }
          }
        }
      ],
      "type": "table"
    },
